{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "lib": ["es2015", "dom"],
      "suppressImplicitAnyIndexErrors": true,
      "typeRoots": [
        "../node_modules/@types/"
      ],
      "baseUrl": "",
      "types": [],
      "noStrictGenericChecks": true
    },
    "include": [
        "app/**/*.ts",
        "tasks/webpack-require.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
